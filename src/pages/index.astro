---
import Layout from "../layouts/Layout.astro"
import websites from "../../public/data/websites/websites.json"
---

<Layout title="Article scraper and summarizer">
  <div class="container">
    <h1>Article scraper and summarizer</h1>
    <div class="websites">
      {
        websites.map((website) => {
          return (
            <a href={"/articles/" + website.short_name}>
              <img src={"/img/" + website.img} alt="website" />
            </a>
          )
        })
      }
    </div>
  </div>
</Layout>

<style lang="scss">
  .container {
    h1 {
      font-size: 2rem;
      color: var(--almost-black);
      text-align: center;
      margin: 2.5rem;
      font-weight: bold;
    }

    .websites {
      margin: auto;
      display: flex;
      flex-wrap: wrap;
      justify-content: center;
      gap: 1.5rem;

      a {
        display: flex;
        justify-content: center;
      }

      img {
        width: 300px;
        border-radius: 5px;
        &:hover {
          box-shadow: 2px 2px 6px 0px rgba(0, 0, 0, 0.5);
        }
      }
    }

    @media (max-width: 600px) {
      h1 {
        font-size: 1.5rem;
        margin: 1.5rem;
      }

      .websites {
        gap: 1rem;
      }
    }
  }
</style>
